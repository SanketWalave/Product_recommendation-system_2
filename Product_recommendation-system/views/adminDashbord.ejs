<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
    }
    .navbar {
      background-color: #343a40;
    }
    .navbar .navbar-brand img {
      height: 40px;
    }
    .dashboard-box {
      border-radius: 12px;
      padding: 20px;
      color: white;
      text-align: center;
      cursor: pointer;
      transition: 0.3s;
    }
    .dashboard-box:hover {
      transform: scale(1.05);
    }
    .box1 { background-color: #0d6efd; }
    .box2 { background-color: #198754; }
    .box3 { background-color: #ffc107; color: #000; }
    .box4 { background-color: #dc3545; }
    .profile-img {
      width: 35px;
      height: 35px;
      border-radius: 50%;
      object-fit: cover;
    }
    .dropdown-menu a {
      padding: 10px 20px;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark px-4">
    <a class="navbar-brand me-auto" href="#">
      <img src="/images/logo.png" alt="Logo">
    </a>
    <div class="dropdown">
      <a class="btn btn-dark dropdown-toggle d-flex align-items-center" href="#" role="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <img src="/images/profile.png" alt="Profile" class="profile-img me-2">
        Admin
      </a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
        <li><a class="dropdown-item" href="/adminProfile">View Profile</a></li>
        <li><a class="dropdown-item" href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- Dashboard Grid -->
  <div class="container mt-5">
    <div class="row g-4">
      
      <!-- Product Dropdown -->
      <div class="col-md-6 col-lg-3">
        <div class="dropdown w-100">
          <button class="dashboard-box box4 dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Product
          </button>
          <ul class="dropdown-menu w-100">
            <li><a class="dropdown-item" href="/addProduct_2">Add Product</a></li>
            <li><a class="dropdown-item" href="/viewProducts">View Products</a></li>
          </ul>
        </div>
      </div>

      <!-- Users Box -->
      <div class="col-md-6 col-lg-3">
        <a href="/view-users" class="text-decoration-none">
          <div class="dashboard-box box3">
            <a class="dropdown-item" href="/viewUsers">View user</a>
          
          </div>
        </a>
      </div>

      <!-- Admin Dropdown -->
      <div class="col-md-6 col-lg-3">
        <div class="dropdown w-100">
          <button class="dashboard-box box4 dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin
          </button>
          <ul class="dropdown-menu w-100">
            <li><a class="dropdown-item" href="/registerAdmin">Add Admin</a></li>
            <li><a class="dropdown-item" href="/viewAdmin">View Admins</a></li>
          </ul>
        </div>
      </div>

      <!-- Category Dropdown -->
      <div class="col-md-6 col-lg-3">
        <div class="dropdown w-100">
          <button class="dashboard-box box4 dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Category
          </button>
          <ul class="dropdown-menu w-100">
            <li><a class="dropdown-item" href="/addCatagory">Add Category</a></li>
            <li><a class="dropdown-item" href="/viewCatagory">View Category</a></li>
          </ul>
        </div>
      </div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
