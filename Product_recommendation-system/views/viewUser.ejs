<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this user?");
        }
    </script>
</head>

<body>
    <h1>User List</h1>
    <% if (users.length> 0) { %>
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>User Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user=> { %>

                    <tr>
                        <% if (user.user_type=="user" ) { %>

                            <td>
                                <%= user.user_id %>
                            </td>
                            <td>
                                <%= user.user_name %>
                            </td>
                            <td>
                                <%= user.user_email %>
                            </td>
                            <td>
                                <%= user.password %>
                            </td>
                            <td>
                                <%= user.user_type %>
                            </td>
                            <td>
                                <a href="/deleteuserbyEmailAnsPassword?email=<%= user.user_email %>&password=<%= user.password %>"
                                    onclick="return confirmDelete();">Delete</a>
                            </td>
                         <% } %>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <p>No users found.</p>
            <% } %>
</body>

</html>