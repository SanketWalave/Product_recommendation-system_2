<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home | Jewelry Store</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
    }
    .navbar-brand img {
      height: 40px;
    }
    .product-card {
      transition: transform 0.3s ease;
    }
    .product-card:hover {
      transform: scale(1.03);
    }
    .product-img {
      height: 200px;
      object-fit: cover;
    }
  </style>
</head>
<body>

  <!-- ✅ Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="/AngryLion.jpg" height="100%"  alt="Logo">
      </a>

     <div class="d-flex ms-auto">
    <!-- Login Button -->
    <a href="/userLogin" class="btn btn-outline-primary me-2">Login</a>

    <!-- Cart Button with Icon and Item Count -->
    <a href="/cart" class="btn btn-outline-success d-flex align-items-center">
        <i class="bi bi-cart" style="font-size: 1.5rem;"></i> <!-- Cart Icon -->
        <span id="cartCount" class="badge bg-danger ms-2">0</span> <!-- Cart Item Counter -->
    </a>
</div>

    </div>
  </nav>

  <!-- ✅ Products Section -->
  <div class="container mt-5">
    <h2 class="text-center mb-4">Our Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% const products = [ 
            {name: 'Gold Necklace', image: 'https://via.placeholder.com/400x300', price: '₹12,000'},
            {name: 'Diamond Ring', image: 'https://via.placeholder.com/400x300', price: '₹18,500'},
            {name: 'Silver Bracelet', image: 'https://via.placeholder.com/400x300', price: '₹5,999'}
          ]; 
      %>
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card product-card h-100 shadow-sm">
            <img src="<%= product.image %>" class="card-img-top product-img" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text text-muted">Elegant and affordable. Perfect for all occasions.</p>
              <p class="fw-bold"><%= product.price %></p>
              <a href="#" class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
