<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Product Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f2f3f5;
    }
    .product-card {
      transition: transform 0.2s;
    }
    .product-card:hover {
      transform: scale(1.03);
    }
  </style>
</head>
<body>

<%- include('home') %>

<div class="container mt-4">
  <h2 class="mb-4">Products</h2>

  <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

      <% for (let i = 0; i < 6; i += 3) { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <div class="row justify-content-center">
            <% for (let j = i; j < i + 3 && j < 6; j++) { %>
              <div class="col-md-4">
                <div class="card product-card h-100">
                  <img src="https://images.unsplash.com/photo-1529778873920-4da4926a72c2?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y3V0ZSUyMGNhdHxlbnwwfHwwfHx8MA%3D%3D" class="card-img-top" alt="Product <%= j+1 %>">
                  <div class="card-body text-center">
                    <h5 class="card-title">Product <%= j+1 %></h5>
                    <p class="card-text">‚Çπ<%= (j+1)*999 %></p>
                    <div class="d-flex justify-content-around">
                      <button class="btn btn-success" onclick="requireLogin()">Buy Now</button>
                      <button class="btn btn-outline-primary" onclick="requireLogin()">Add to Cart</button>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      <% } %>

    </div>

    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
</div>

<!-- Modal: Login Required -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">Login Required</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <p>You must log in to continue shopping.</p>
        <a href="/login" class="btn btn-primary">Login Now</a>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function requireLogin() {
    const userLoggedIn = false; // üîê Replace this with actual session check
    if (!userLoggedIn) {
      const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
      loginModal.show();
    } else {
      alert("Proceed with action"); // Later: replace with cart logic
    }
  }
</script>

</body>
</html>
